@model IEnumerable<Recuiter>

<div class="container col-md-10 text-center">
     <table class="table table-bordered">
         <tr>
             <th colspan="8" class="text text-primary h1">Recuiter Applied</th>
         </tr>
         <tr>
             <th colspan="2">
                 <a class="btn btn-outline-warning" asp-controller="Job" asp-action="SortDesc">Name (Z-A)</a>
                 <a class="btn btn-outline-success" asp-controller="Job" asp-action="SortAsc">Name (A-Z)</a>
             </th>
             <th colspan="4">
                 <form asp-controller="Job" asp-action="Search" method="post">
                     <input class="form-control" type="search" name="keyword" placeholder="Search by name" />
                 </form>
             </th>
         </tr>
         <tr>
             <th>Recuiter Id</th>
             <th>FullName</th>
             <th>Phone</th>
             <th>Email</th>
             <th>Skills</th>
             <th>CV</th>
             <th>Action</th>
         </tr>
         @foreach (var Recuiter in Model)
         {
             <tr>
                 <td>@Recuiter.Id</td>

                 <td>@Recuiter.FullName</td>
                 <td>
                     @Recuiter.Phone
                 </td>
                 <td>
                     @Recuiter.Email
                 </td>
                 <td >
                    <a class="btn btn-primary" asp-controller="Recuiter" asp-action="Edit" asp-route-id="@Recuiter.Id">Edit</a>
                 </td>
             </tr>
         }
     </table>
</div>