@model Job

<div class="container col-md-12 card bg-light">
    <div class="row">
        <div class="col-12">
            <h1 class="text text-center text-primary">Name: @Model.Name</h1>
            <h4 class="text-text-success">Skills: @Model.Skills</h4>
            <h4 class="text text-success">Requiment: @Model.Requiment</h4>
            <h4 class="text text-success">Salary: $@Model.Salary</h4>
            <h4 class="text text-success">Description: @Model.Description</h4>
        </div>
        <div class="col-12">
            <table class="table table-bordered">
                <tr>
                    <th colspan="8" class="text text-primary h1">Candidate Applied</th>
                </tr>
                <tr>
                    <th colspan="2">
                        <a class="btn btn-outline-warning" asp-controller="Job" asp-route-id="@Model.Id" asp-action="SortCandidateDesc">Name (Z-A)</a>
                        <a class="btn btn-outline-success" asp-controller="Job" asp-route-id="@Model.Id" asp-action="SortCandidateAsc">Name (A-Z)</a>
                    </th>
                    <th colspan="6">
                        <form asp-controller="Job" asp-action="SearchCandidate" method="post">
                            <input class="form-control" type="search" name="keyword" placeholder="Search by name" />
                        </form>
                    </th>
                </tr>
                <tr>
                    <th>Candidate Id</th>
                    <th>FullName</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Skills</th>
                    <th>CV</th>
                    <th>Action</th>
                </tr>
                @foreach (var candidate in Model.JobCandidates)
                {
                    <tr>
                        <td>@candidate.Id</td>

                        <td>@candidate.Candidate.FullName</td>
                        <td>
                            @candidate.Candidate.Phone
                        </td>
                        <td>
                            @candidate.Candidate.Email
                        </td>
                        <td>
                            @candidate.Candidate.Skills
                        </td>
                        <td>
                            @Html.ActionLink(@candidate.Candidate.CV, "Download", new { CV = @candidate.Candidate.CV })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>